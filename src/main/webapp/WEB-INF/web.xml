<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">
    <display-name>motor-depot</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>Charset filter</filter-name>
        <filter-class>by.epam.jwd.controller.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Charset filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

<!--    <error-page>-->
<!--        <exception-type>java.lang.Throwable</exception-type>-->
<!--        <location>/WEB-INF/jsp/error.jsp</location>-->
<!--    </error-page>-->

    <servlet>
        <servlet-name>presentation</servlet-name>
        <jsp-file>/WEB-INF/jsp/presentationPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>presentation</servlet-name>
        <url-pattern>/presentation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signIn</servlet-name>
        <jsp-file>/WEB-INF/jsp/signInPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>signIn</servlet-name>
        <url-pattern>/signIn</url-pattern>
    </servlet-mapping>
</web-app>
